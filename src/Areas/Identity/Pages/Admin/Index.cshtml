@page
@model IndexModel

@{
    ViewData["Title"] = "Admin";
}

<div class="container">
    <div class="row">
        <h3 class="mb-3">Admin</h3>
    </div>
    <div class="row">
        <div class="col">
            <label>search: </label>
            <input type="text" />
        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Email</th>
                <th>Discord</th>
                <th>Actions</th>
            </tr>

            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.User.UserName</td>
                    <td>@string.Join(',', user.Roles)</td>
                    <td>@user.User.Email</td>
                    <td>discord</td>
                    <td>
                        <a asp-area="Identity"
                           asp-page="/Admin/Account"
                           asp-route-username=@user.User.UserName>
                            edit
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
