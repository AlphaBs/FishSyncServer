@model AlphabetUpdateServer.Pages.Shared.Components.BucketDependency.BucketDependencyModel

<div class="bg-white p-6 shadow-md rounded-lg mx-auto w-full mb-6">
    <h4 class="text-2xl font-bold dark:text-white mb-4">의존성</h4>
    @if (Model.Dependencies.Any())
    {
        <ul
            class="w-48 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white mb-4">
            @foreach (var dep in Model.Dependencies)
            {
                <li
                    class="w-full px-4 py-2 border-b border-gray-200 dark:border-gray-600 flex flex-row justify-between items-baseline">
                    <span>@dep</span>
                    @if (Model.ShowEdit)
                    {
                        <form method="post" asp-page-handler="DeleteDependency" class="mt-2">
                            <input type="hidden" name="username" value="@dep"/>
                            <button type="submit"
                                    class="text-red-600 border border-red-600 hover:bg-red-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-red-300 font-medium rounded-full text-xs px-2 py-1 inline-flex items-center dark:border-red-500 dark:text-red-500 dark:hover:bg-red-600 dark:hover:text-white dark:focus:ring-red-800">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                                     stroke="currentColor" class="w-3 h-3">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                        </form>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>의존성이 없습니다.</p>
    }

    @if (Model.ShowEdit)
    {
        <form method="post" asp-page-handler="AddDependency" class="flex items-center gap-4">
            <label for="dep" class="block font-medium text-gray-700">버킷</label>
            <input type="text" id="dep" name="dep"
                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/>
            <input type="submit" value="추가"
                   class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 cursor-pointer"/>
        </form>
    }
</div>