@using AlphabetUpdateServer.Services.Users
<ul class="navbar-nav">
@if (User.Identity is { IsAuthenticated: true })
{
    <li class="nav-item">
        <a id="manage"
           class="nav-link text-dark"
           asp-page="/Web/Account/Manage/Index"
           asp-route-username="@CookieAuthService.GetUsername(User.Claims)"
           title="Manage">
            @CookieAuthService.GetUsername(User.Claims)
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-page="/Web/Account/Logout" asp-route-returnUrl="@Url.Page("/Web/Home")">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">로그아웃</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-page="/Web/Account/Register">회원가입</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-page="/Web/Account/Login">로그인</a>
    </li>
}
</ul>
