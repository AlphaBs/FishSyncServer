@page
@using AlphabetUpdateServer.Pages.Web
@model AlphabetUpdateServer.Pages.Web.ChecksumStorages.ListModel

<div class="bg-white p-6 shadow-md rounded-lg mx-auto w-full">
    @await Html.PartialAsync("Web/_BreadcrumbPartial", new BreadcrumbModel[]
            {
    new() { Name = "ChecksumStorages" }
            })

    <h1 class="text-2xl font-bold mb-4">스토리지</h1>
    <a asp-page="AddObject"
        class="mr-2 px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Add Object
    </a>
    <a asp-page="AddRFiles"
        class="mr-2 px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Add RFiles
    </a>
    <hr class="my-4" />
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 mt-4">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(Model => Model.Items.First().Id)
                </th>
                <th scope="col" class="px-6 py-3">
                    @Html.DisplayNameFor(Model => Model.Items.First().Type)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <a asp-page="Edit" asp-route-id="@item.Id" asp-route-type="@item.Type"
                            class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                            @Html.DisplayFor(Model => item.Id)
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        @Html.DisplayFor(Model => item.Type)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
