@page
@model AlphabetUpdateServer.Pages.Web.Config

<h1>Config</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 form-check">
                <input asp-for="MaintenanceMode" class="form-check-input" />
                <label asp-for="MaintenanceMode" class="form-check-label"></label>
                <span asp-validation-for="MaintenanceMode" class="text-danger"></span>
            </div>
            <input type="submit" value="Update" class="btn btn-primary" />
        </form>
    </div>
</div>