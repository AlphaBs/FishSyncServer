@page
@model AlphabetUpdateServer.Pages.Web.Config

<div class="bg-white p-6 shadow-md rounded-lg mx-auto w-full">
    <h1 class="text-2xl font-bold mb-4">설정</h1>
    <hr class="my-4" />
    <div class="w-full md:w-1/3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <div class="mb-3 flex items-center">
                <input asp-for="MaintenanceMode" class="form-checkbox h-4 w-4 text-blue-600" />
                <label asp-for="MaintenanceMode" class="ml-2"></label>
                <span asp-validation-for="MaintenanceMode" class="text-red-500 ml-2"></span>
            </div>
            <input type="submit" value="Update"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" />
        </form>
    </div>
</div>