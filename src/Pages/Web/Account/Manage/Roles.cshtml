@page "/Web/Account/Manage/{username}/Roles"
@model RolesModel

@{
    Layout = "./_Layout.cshtml";
    ViewData["Title"] = "권한";
}

<form method="post" class="space-y-4">
    <div class="space-y-3">
        @for (int i = 0; i < Model.RoleEnables.Count; i++)
        {
            <div class="flex items-center">
                <input asp-for="@Model.RoleEnables[i]" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" />
                <label class="ml-2 text-gray-700">@Model.RoleNames[i]</label>
            </div>
        }
    </div>
    <button type="submit" name="action"
        class="w-full md:w-auto bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
        Update
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
