@page
@model AlphabetUpdateServer.Pages.Web.Account.Admin.IndexModel

@{
    ViewData["Title"] = "Admin";
}

<div class="container">
    <div class="row">
        <h3 class="mb-3">Admin</h3>
    </div>
    <div class="row">
        <div class="col">
            <label>search: </label>
            <input type="text" />
        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>

            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@string.Join(',', user.Roles)</td>
                    <td>
                        <form method="get" action="/Web/Account/Manage/@Html.UrlEncoder.Encode(user.Username)/Index">
                            <input class="btn btn-primary" type="submit" value="Edit"/>
                        </form>
                        <form asp-page-handler="Delete">
                            <input type="hidden" name="username" value="@user.Username"/>
                            <input class="btn btn-primary" type="submit" value="Delete"/>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
