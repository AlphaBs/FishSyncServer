@page
@model AlphabetUpdateServer.Views.Web.Buckets.ListModel

@{
    ViewData["Title"] = "버킷 목록";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="mb-3">버킷 목록</h3>
        </div>
        <div class="col-auto">
            <a asp-area="" asp-page="AddChecksumStorageBucket" class="btn btn-primary">추가</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Owners</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bucket in Model.Buckets)
                    {
                        <tr>
                            <td><a asp-area="" asp-page="EditChecksumStorageBucket" asp-route-id="@bucket.Id">@bucket.Id</a></td>
                            <td>@string.Join(',', bucket.Owners)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>