@page "{id}"
    
@model AlphabetUpdateServer.Pages.Web.Buckets.EditChecksumStorageBucketModel

<h1><a asp-page="ViewChecksumStorageBucket" asp-route-id="@Model.Id">@Model.Id</a></h1>

<form method="post">
    <div class="mb-3">
        <input asp-for="Limitations.IsReadOnly" class="form-check-input"/>
        <label asp-for="Limitations.IsReadOnly" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label asp-for="Limitations.MaxBucketSize" class="form-label"></label>
        <input asp-for="Limitations.MaxBucketSize" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Limitations.MaxFileSize" class="form-label"></label>
        <input asp-for="Limitations.MaxFileSize" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Limitations.MaxNumberOfFiles" class="form-label"></label>
        <input asp-for="Limitations.MaxNumberOfFiles" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Limitations.ExpiredAt" class="form-label"></label>
        <input asp-for="Limitations.ExpiredAt" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="StorageId" class="form-label"></label>
        <input asp-for="StorageId" class="form-control"/>
    </div>
    <input type="submit" class="btn btn-primary"/>
</form>