@using Humanizer;
@using NeoSmart.PrettySize;

@model BucketViewModel

@{
    ViewData["Title"] = Model.Id;

    string readableSize(long size) => new PrettySize(size).Format(UnitBase.Base10);
    string readableDateTime(DateTimeOffset dt) => dt.Humanize();
}

<h5 class="mb-3">←<a asp-controller="Buckets">버킷 목록</a></h5>
<h3 class="mb-3">@Model.Id</h3>
<form method="post" onsubmit="return confirm('정말로 업데이트할까요?')">
    <div class="row mb-3">
        <label for="inputIsReadOnly" class="col-sm-2 col-check-label">IsReadOnly</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.IsReadOnly" class="form-check" id="inputIsReadOnly">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxFileSize" class="col-sm-2 col-form-label">MaxFileSize</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.MaxFileSize" class="form-control" id="inputMaxFileSize">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxNumberOfFiles" class="col-sm-2 col-form-label">MaxNumberOfFiles</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.MaxNumberOfFiles" class="form-control" id="inputMaxNumberOfFiles">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxBucketSize" class="col-sm-2 col-form-label">MaxBucketSize</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.MaxBucketSize" class="form-control" id="inputMaxBucketSize">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputExpiredAt" class="col-sm-2 col-form-label">ExpiredAt</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.ExpiredAt" class="form-control" id="inputExpiredAt">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputStorageId" class="col-sm-2 col-form-label">StorageId</label>
        <div class="col-sm-10">
            <input asp-for="StorageId" class="form-control" id="inputStorageId">
        </div>
    </div>
    
    <button type="submit" name="action" class="btn btn-primary mb-3">업데이트</button>
</form>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Checksum</th>
            <th>Updated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AlphabetUpdateServer.Models.Buckets.BucketFile file in Model.Files)
        {
            <tr>
                <td data-tippy-content="@file.Location"><a href="@file.Location" target="_blank">@file.Path</a></td>
                <td class="col-file-metadata" data-tippy-content="@file.Metadata.Size.ToString("#,#' bytes'")">@readableSize(file.Metadata.Size)</td>
                <td class="col-file-metadata" data-tippy-content="@file.Metadata.LastUpdated.ToString("o")">@readableDateTime(file.Metadata.LastUpdated)</td>
                <td class="col-file-metadata">@file.Metadata.Checksum</td>
            </tr>
        }
    </tbody>
</table>