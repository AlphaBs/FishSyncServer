@model BucketViewModel

<h5 class="mb-3">←<a asp-controller="Buckets">Buckets</a></h5>
<h3 class="mb-3">Buckets/@Model.BucketId</h3>
<form method="post">
    <div class="row mb-3">
        <label for="inputIsReadOnly" class="col-sm-2 col-form-label">IsReadOnly</label>
        <div class="col-sm-10">
            <input asp-for="Bucket.Limitations.IsReadOnly" class="form-control" id="inputIsReadOnly">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputExpiredAt" class="col-sm-2 col-form-label">ExpiredAt</label>
        <div class="col-sm-10">
            <input asp-for="Bucket.Limitations.ExpiredAt" class="form-control" id="inputExpiredAt">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxBucketSize" class="col-sm-2 col-form-label">MaxBucketSize</label>
        <div class="col-sm-10">
            <input asp-for="Bucket.Limitations.MaxBucketSize" class="form-control" id="inputMaxBucketSize">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxFileSize" class="col-sm-2 col-form-label">MaxFileSize</label>
        <div class="col-sm-10">
            <input asp-for="Bucket.Limitations.MaxFileSize" class="form-control" id="inputMaxFileSize">
        </div>
    </div>
    <button type="submit" name="action" class="btn btn-primary mb-3" onsubmit="return confirm('정말로 업데이트?')">Update</button>
</form>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>A</th>
            <th>Name</th>
            <th>Size</th>
            <th>Checksum</th>
            <th>Updated</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th><i class="bi bi-folder-symlink"></i></th>
            <th>..</th>
            <th>-</th>
            <th>-</th>
            <th>-</th>
        </tr>
        @foreach (AlphabetUpdateServer.Models.Buckets.BucketFile file in Model.Files)
        {
            <tr>
                <th><i class="bi bi-file-earmark"></i></th>
                <th>@file.Path</th>
                <th>@file.Metadata.Size</th>
                <th>@file.Metadata.Checksum</th>
                <th>@file.Metadata.LastUpdated</th>
            </tr>
        }
    </tbody>
</table>