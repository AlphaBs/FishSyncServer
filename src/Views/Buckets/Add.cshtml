@model AddBucketViewModel

<h5 class="mb-3">←<a asp-controller="Buckets">Buckets</a></h5>
<h3 class="mb-3">Add New Bucket</h3>
<form method="post">
    <div class="row mb-3">
        <label for="inputId" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" id="inputId">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputIsReadOnly" class="col-sm-2 col-form-label">IsReadOnly</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.IsReadOnly" class="form-control" id="inputIsReadOnly">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputExpiredAt" class="col-sm-2 col-form-label">ExpiredAt</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.ExpiredAt" class="form-control" id="inputExpiredAt">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxBucketSize" class="col-sm-2 col-form-label">MaxBucketSize</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.MaxBucketSize" class="form-control" id="inputMaxBucketSize">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputMaxFileSize" class="col-sm-2 col-form-label">MaxFileSize</label>
        <div class="col-sm-10">
            <input asp-for="Limitations.MaxFileSize" class="form-control" id="inputMaxFileSize">
        </div>
    </div>
    <button type="submit" name="action" class="btn btn-primary mb-3" onsubmit="return confirm('정말로 업데이트?')">Update</button>
</form>

