@model AddChecksumStorageViewModel

@{
    ViewData["Title"] = "스토리지 추가";
}

<h5 class="mb-3">←<a asp-controller="ChecksumStorages" asp-action="Index">스토리지 목록</a></h5>
<h3 class="mb-3">스토리지 추가</h3>
<form method="post" onsubmit="return confirm('정말로 새 스토리지를 만들까요?')">
    <div class="row mb-3">
        <label for="inputId" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" id="inputId">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputIsReadonly" class="col-sm-2 form-check-label">IsReadOnly</label>
        <div class="col-sm-10">
            <input asp-for="IsReadonly" class="form-check-input" id="inputIsReadonly">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputHost" class="col-sm-2 col-form-label">Host</label>
        <div class="col-sm-10">
            <input asp-for="Host" class="form-control" id="inputHost">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputClientSecret" class="col-sm-2 col-form-label">ClientSecret</label>
        <div class="col-sm-10">
            <input asp-for="ClientSecret" class="form-control" id="inputClientSecret">
        </div>
    </div>
    <button type="submit" name="action" class="btn btn-primary mb-3">생성</button>
</form>

