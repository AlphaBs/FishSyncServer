@model ChecksumStoragesViewModel

@{
    ViewData["Title"] = "스토리지 목록";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="mb-3">스토리지 목록</h3>
        </div>
        <div class="col-auto">
            <a asp-controller="ChecksumStorages" asp-action="GetAdd" class="btn btn-primary">추가</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>IsReadonly</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var checksumStorage in Model.ChecksumStorages)
                {
                    <tr>
                        <td><a asp-area="" asp-controller="ChecksumStorage" asp-route-StorageId="@checksumStorage.Id">@checksumStorage.Id</a></td>
                        <td>@checksumStorage.Type</td>
                        <td>@checksumStorage.IsReadonly</td>
                    </tr>
                }
            </tbody>
        </table>  
        </div>
    </div>
</div>