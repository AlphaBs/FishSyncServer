@page "/Web/Account/Manage/{username}/ChangePassword"
@model ChangePasswordModel

@{
    Layout = "./_Layout.cshtml";
    ViewData["Title"] = "비밀번호 변경";
}

<form id="profile-form" method="post" class="space-y-4">
    <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
    <div class="space-y-3">
        <div>
            <label asp-for="NewPassword" class="block font-medium text-gray-700"></label>
            <input asp-for="NewPassword" type="password" class="block w-full rounded-md border-gray-300 shadow-sm" />
            <span asp-validation-for="NewPassword" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="block font-medium text-gray-700"></label>
            <input asp-for="ConfirmPassword" type="password"
                class="block w-full rounded-md border-gray-300 shadow-sm" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500"></span>
        </div>
    </div>
    <button id="update-profile-button" type="submit"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
        저장
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
