@model AlphabetUpdateServer.Pages.Shared.Components.BucketOwner.BucketOwnerModel

<div class="bg-white p-6 shadow-md rounded-lg mx-auto w-full mb-6">
    <h4 class="text-2xl font-bold dark:text-white mb-4">소유자</h4>
    @{ var any = false; }
    <ul
        class="w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
        @await foreach (var owner in Model.Owners)
        {
            any = true;
            <li
                class="w-full px-4 py-2 border-b border-gray-200 dark:border-gray-600 flex flex-row justify-between items-center">
                <span>@owner</span>
                @if (Model.ShowEdit)
                {
                    <form method="post" asp-page-handler="DeleteOwner" class="flex">
                        <input type="hidden" name="username" value="@owner"/>
                        <button type="submit" class="place-self-center">
                            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 9-6 6m0-6 6 6m6-3a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                            </svg>
                        </button>
                    </form>
                }
            </li>
        }
    </ul>
    @if (!any)
    {
        <p>소유자가 없습니다.</p>
    }

    @if (Model.ShowEdit)
    {
        <form method="post" asp-page-handler="AddOwner" class="flex items-center gap-4 mt-4">
            <label for="username" class="font-medium text-gray-700">유저네임</label>
            <input type="text" id="username" name="username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/>
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                추가
            </button>
        </form>
    }
</div>